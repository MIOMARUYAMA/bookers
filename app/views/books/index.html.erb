<h1>Books</h1>

<table>
  <thead>
  <tr>
  <th>Title</th>
  <th>Body</th>
  <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
  <tr>
  <td><%= book.title %></td>
  <td><%= book.body %></td>
  <td><%=link_to "show",book_path(book.id) %></td>
  </tr>
  </tbody>
  </table>
<% end %>



<h2>New Book</h2>
<%= form_with model: @book do |form| %>
<p>title</p>
<%= form.text_field:title %>
<p>body</p>
<%=form.text_area:body %>

<%= form.submit "Create Book" %>
<% end %>

